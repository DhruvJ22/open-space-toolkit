SET (Library_ROOT_DIR ${Library_ROOT_DIR} @CMAKE_INSTALL_PREFIX@)

FIND_PATH (Library_INCLUDE_DIR "Library/Utilities.hpp" PATHS ${Library_ROOT_DIR} PATH_SUFFIXES "include" NO_DEFAULT_PATH)
FIND_LIBRARY (Library_LIBRARY NAMES "liblibrary-.so" PATHS ${Library_ROOT_DIR} PATH_SUFFIXES "lib" NO_DEFAULT_PATH)

