# MESSAGE (STATUS "Library_LIBRARY = ${Library_LIBRARY}")
# MESSAGE (STATUS "Library_FIND_VERSION = ${Library_FIND_VERSION}")

IF (Library_INCLUDE_DIR)

    SET (Library_INCLUDE_DIRS ${Library_INCLUDE_DIR} ${Library_INCLUDE_DIR}/Library/)
    SET (Library_LIBRARIES ${Library_LIBRARY})

    SET (Library_FOUND TRUE)

ENDIF ()

